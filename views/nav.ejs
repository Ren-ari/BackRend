<head>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Luckiest+Guy&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap");
  </style>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
  />
  <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
</head>

<nav class="p-0 m-0 navbar navbar-expand-lg bg-body-tertiary" id="banner">
  <div class="p-4 m-0 bg-primary bg-gradient container-fluid">
    <a class="navbar-brand fs-2" href="/">RenForum</a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-collapse collapse position-relative" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active m-1" aria-current="page" href="/write"
            >Write</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link active m-1" href="/list">List</a>
        </li>
      </ul>

      <div
        class="position-absolute end-0 mb-1 form-check form-switch form-check-reverse"
        id="badge"
      >
        <input
          class="form-check-input"
          onclick="darkMode()"
          type="checkbox"
          id="flexSwitchCheckReverse"
        />
        <label class="form-check-label" for="flexSwitchCheckReverse"
          ><i class="fa-solid fa-moon" id="moon"></i
        ></label>
      </div>
    </div>
  </div>
</nav>

<style>
  .navbar {
    width: 100%;
    height: 20%;
    padding: 0;
  }

  .nav-link {
    position: relative;
    padding-bottom: 5px;
  }

  .nav-link::after {
    background-color: white;
    content: "";
    position: absolute;
    width: 0;
    height: 3px;
    border-radius: 3px;
    bottom: 0;
    left: 10%;
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 80%;
  }

  .container-fluid a {
    color: aliceblue;
  }

  .navbar-brand {
    color: aliceblue;
    text-shadow: 1px 1px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000,
      -1px 1px 0 #000;
    font-family: "Luckiest Guy", cursive;
    font-weight: 400;
    font-style: normal;
  }

  .navbar-brand:hover {
    color: aliceblue;
    text-decoration: none;
  }

  .nav-link {
    font-family: "Roboto", sans-serif;
    font-weight: 900;
    font-style: normal;
  }

  .form-check-input:checked {
    background-color: #28a745;
  }

  #moon {
    color: yellow;
  }
</style>

<script
  src="https://code.jquery.com/jquery-3.7.1.min.js"
  integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
  crossorigin="anonymous"
></script>

<script>
  function darkMode() {
    let mode = document.documentElement.getAttribute("data-bs-theme");

    if (mode === "dark") {
      document.documentElement.setAttribute("data-bs-theme", "light");
      localStorage.setItem("theme", "light"); // 다크 모드를 비활성화하고 저장
    } else {
      document.documentElement.setAttribute("data-bs-theme", "dark");
      localStorage.setItem("theme", "dark"); // 다크 모드를 활성화하고 저장
    }
  }

  // 페이지 로딩 시 다크 모드 상태 복원
  window.addEventListener("DOMContentLoaded", () => {
    const savedTheme = localStorage.getItem("theme"); // 저장된 테마 불러오기
    if (savedTheme) {
      document.documentElement.setAttribute("data-bs-theme", savedTheme); // 테마 적용
      const switchButton = document.getElementById("flexSwitchCheckReverse");
      switchButton.checked = savedTheme === "dark"; // 버튼 상태 복원
    }
  });
</script>
